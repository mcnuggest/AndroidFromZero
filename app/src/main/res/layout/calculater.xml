<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/shuru"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/whitebackground"
        android:editable="false"
        android:gravity="right|bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="C"
            android:textSize="20sp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="Del"
            android:textSize="20sp" />

        <Button
            android:id="@+id/chu"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="/"
            android:textSize="20sp" />

        <Button
            android:id="@+id/cheng"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="*"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/number7"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/number8"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/number9"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/jian"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="-"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/number4"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/number5"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/number6"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/jia"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="@dimen/buttonsquare"
            android:layout_marginLeft="10dp"
            android:background="@drawable/whiteselector"
            android:text="+"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/number1"
                    android:layout_width="@dimen/buttonsquare"
                    android:layout_height="@dimen/buttonsquare"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/whiteselector"
                    android:text="1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/number2"
                    android:layout_width="@dimen/buttonsquare"
                    android:layout_height="@dimen/buttonsquare"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/whiteselector"
                    android:text="2"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/number3"
                    android:layout_width="@dimen/buttonsquare"
                    android:layout_height="@dimen/buttonsquare"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/whiteselector"
                    android:text="3"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/number0"
                    android:layout_width="170dp"
                    android:layout_height="@dimen/buttonsquare"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/whiteselector"
                    android:text="0"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/numberdian"
                    android:layout_width="@dimen/buttonsquare"
                    android:layout_height="@dimen/buttonsquare"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/whiteselector"
                    android:text="."
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/dengyu"
            android:layout_width="@dimen/buttonsquare"
            android:layout_height="170dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/orangeselector"
            android:text="="
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
